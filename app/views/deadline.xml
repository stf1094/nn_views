<Alloy>
    <Window backgroundColor="#193441">
        <View borderRadius="10" class="form2 vgroup bg-white">
            <Label class="h3 deadline-title" text="Set a Deadline to Complete your Project" width="80%"/>
            <View class="hgroup size" height="100px" top="20" width="80%">
                <Label class="h5" text="End Date"/>
                <ImageView height="90px" image="/images/iphone/calendar-icon.png" left="15" width="90px"/>
                <TextField backgroundColor="#ececec" height="90px" width="300px"/>
            </View>
            <View class="hgroup two-buttons" top="35">
                <Button class="button-half1-full">Back</Button>
                <Button class="button-half1-full" left="20">Next</Button>
            </View>
        </View>
        <ImageView class="topCircle" image="/images/iphone/project-shuriken.png"/>
    </Window>
</Alloy>
