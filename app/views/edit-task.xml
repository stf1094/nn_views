<Alloy>
    <Window id="Window_1" title="Edit Task">
        <View class="vgroup">
            <!--Header-->
            <View backgroundColor="f9f9f9" class="top" height="150px">
                <Label fontWeight="bold" text="Edit Task" top="10%"/>
                <Label class="h5" color="#444444" left="5%" text="Delete Task" top="10%"/>
                <Label class="h5" color="#f7941d" right="5%" text="Done" top="10%"/>
            </View>
            <!--Task Label-->
            <View height="70px">
                <Label class="label-left" text="Task" width="90%"/>
            </View>
            <!--Enter Task Text Field-->
            <View height="90px">
                <TextField backgroundColor="#ececec" color="#444444" height="90px" left="5%" top="5" value="Whatever the task is currently" width="650px"/>
            </View>
            <!--date entries, start/end-->
            <View class="hgroup size" height="100px" top="20">
                <Label class="font14" text="Start Date"/>
                <ImageView height="90px" image="/images/iphone/calendar-icon.png" left="15" width="90px"/>
                <TextField backgroundColor="#ececec" height="90px" width="300px"/>
            </View>
            <View class="hgroup size" height="100px" top="10">
                <Label class="font14" text="End Date"/>
                <ImageView height="90px" image="/images/iphone/calendar-icon.png" left="20" width="90px"/>
                <TextField backgroundColor="#ececec" height="90px" width="300px"/>
            </View>
        </View>
    </Window>
</Alloy>
