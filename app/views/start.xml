<Alloy>
    <Window backgroundColor="#193441">
        <View class="form2 bg-white vgroup borderRadius10">
            <Label class="h2 start-title" width="85%">When would you like to start?</Label>
            <View class="hgroup size choose-start-date" top="20" width="85%">
                <Label class="h5" text="Start Date"/>
                <ImageView class="calendar-icon-square" image="/images/iphone/calendar-icon.png"/>
                <TextField class="textfield-date"/>
            </View>
            <View class="hgroup two-buttons" top="35">
                <Button class="button-half1-full">Back</Button>
                <Button class="button-half1-full" left="20">Next</Button>
            </View>
        </View>
        <ImageView class="topCircle" image="/images/iphone/project-shuriken.png"/>
    </Window>
</Alloy>
