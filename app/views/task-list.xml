<Alloy>
    <Window id="Window_1" title="Tasks">
        <View class="top">
            <ImageView class="top span-width" height="200px" image="/images/iphone/project-dashboard-cover.png"/>
            <Label class="textfield-med-full" color="white" text="Project Name" top="30"/>
            <View class="vgroup" top="110">
                <View height="70">
                    <Button id="Button_1">Add Task</Button>
                    <TextField id="TextField_1"/>
                </View>
                <Label class="h2" text="Project Tasks"/>
            </View>
        </View>
        <ScrollView class="vgroup" top="240">
            <View backgroundColor="#ececec" height="50" width="100%">
                <Label class="h4" text="IN THE QUEUE"/>
                <Label class="h5" right="5%" text="See All"/>
            </View>
            <ListView title="In the Queue">
                <ListSection title="Today">
                    <ListItem title="Contact 1"/>
                    <ListItem title="Contact 2"/>
                    <ListItem title="Contact 3"/>
                    <ListItem title="Contact 4"/>
                    <ListItem title="Contact 5"/>
                </ListSection>
            </ListView>
            <View backgroundColor="#ececec" height="50" width="100%">
                <Label class="h4" text="OTHER TASKS"/>
                <Label class="h5" right="5%" text="See All"/>
                <Label class="h3" left="5%" text="+"/>
            </View>
            <ListView title="Tasks">
                <ListSection>
                    <ListItem title="Task 1"/>
                    <ListItem title="Task 2"/>
                    <ListItem title="Task 3"/>
                    <ListItem title="Task 4"/>
                    <ListItem title="Task 5"/>
                    <ListItem title="Task 6"/>
                </ListSection>
            </ListView>
        </ScrollView>
    </Window>
</Alloy>
